{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/badge(?:/|$)", "dest": "/server.js" },
    { "src": "/badge/.*", "dest": "/server.js" },
    { "src": "/image(?:/|$)", "dest": "/server.js" },
    { "src": "/image/.*", "dest": "/server.js" },
    { "src": "/api/.*", "dest": "/server.js" },
    { "src": "/auth/.*", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}

